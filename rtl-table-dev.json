{
  "id": "com.custom.rtl.table.dev",
  "version": "1.0.0",
  "name": "RTL Table Dev",
  "description": "A table widget with full right-to-left layout support",
  "newInstancePrefix": "RtlTableDev",
  "icon": "https://www.example.com/customwidgets/rtl-table/icon.png",
  "vendor": "Lior Benisty",
  "webcomponents": [
    {
      "kind": "main",
      "tag":"com-custom-rtl-table-dev",
      "url": "https://liorbenistyy.github.io/rtl-table-dev/rtl-table-dev.js",
      "integrity": "",
      "ignoreIntegrity": true
    }
  ],
  "dataBindings": {
    "mainBinding": {
      "feeds": [
        {
          "id": "dimensions",
          "type": "dimension",
          "description": "Dimension columns"
        },
        {
          "id": "measures",
          "type": "mainStructureMember",
          "description": "Measure columns"
        }
      ]
    }
  },
  "properties": {
    "rtlEnabled": {
      "type": "boolean",
      "description": "Enable Right-to-Left Layout",
      "default": true
    },
    "headerBackgroundColor": {
      "type": "string",
      "description": "Header background color",
      "default": "#f0f0f0"
    },
    "rowBackgroundColor": {
      "type": "string",
      "description": "Row background color",
      "default": "#ffffff"
    },
    "textColor": {
      "type": "string",
      "description": "Text color",
      "default": "#000000"
    },
    "fontSize": {
      "type": "integer",
      "description": "Font size (px)",
      "default": 14
    }
  },
  "methods": {},
  "events": {},
  "supportsMobile": true,
  "supportsExport": true,
  "supportsBookmark": true,
  "supportsViewportLoading": true
}
