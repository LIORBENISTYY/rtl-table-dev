{
  "id": "com.custom.rtl.table",
  "version": "1.0.0",
  "name": "RTL Table",
  "description": "A table widget with full right-to-left layout support",
  "newInstancePrefix": "RtlTable",
  "icon": "https://www.example.com/customwidgets/rtl-table/icon.png",
  "vendor": "Lior Benisty",
  "webcomponents": [
    {
      "kind": "main",
      "tag": "com-custom-rtl-table",
      "url": "https://liorbenistyy.github.io/rtl-table/rtl-table.js",
      "integrity": "",
      "ignoreIntegrity": true
    }
  ],
  "dataBindings": {
    "mainBinding": {
      "feeds": [
        {
          "id": "dimensions",
          "type": "dimension",
          "description": "Dimension columns"
        },
        {
          "id": "measures",
          "type": "mainStructureMember",
          "description": "Measure columns"
        }
      ]
    }
  },
  "properties": {
    "rtlEnabled": {
      "type": "boolean",
      "description": "Enable Right-to-Left Layout",
      "default": true
    }
  },
  "methods": {
    "highlightRow": {
      "description": "Highlights a specific row by index.",
      "parameters": [
        { "name": "index", "type": "integer", "description": "Row index to highlight" }
      ]
    },
    "clearHighlight": {
      "description": "Clears all highlighted rows."
    }
  },
  "events": {
    "onRowClick": {
      "description": "Triggered when a row is clicked"
    }
  },
  "supportsMobile": true,
  "supportsExport": true,
  "supportsBookmark": true,
  "supportsViewportLoading": true
}
