{
  "id": "com.custom.rtl.table",
  "version": "1.2.0",
  "name": "RTL Table",
  "description": "A table widget with full right-to-left layout support",
  "newInstancePrefix": "RtlTable",
  "icon": "https://www.example.com/customwidgets/rtl-table/icon.png",
  "vendor": "Lior Benisty",
  "webcomponents": [
    {
      "kind": "main",
      "tag": "com-custom-rtl-table",
      "url": "https://liorbenistyy.github.io/rtl-table/rtl-table.js",
      "integrity": "",
      "ignoreIntegrity": true
    }
  ],
  "dataBindings": {
    "mainBinding": {
      "feeds": [
        { "id": "dimensions", "type": "dimension", "description": "Dimension columns" },
        { "id": "measures", "type": "mainStructureMember", "description": "Measure columns" }
      ]
    }
  },
  "properties": {
    "rtlEnabled": {
      "type": "boolean",
      "description": "Enable Right-to-Left Layout",
      "default": true
    }
  },
  "methods": {
    "highlightRow": {
      "description": "Highlights a specific row by index.",
      "parameters": [{ "name": "index", "type": "integer" }]
    },
    "clearHighlight": {
      "description": "Clears all highlighted rows."
    },
    "setVisible": {
      "description": "Shows or hides the widget",
      "parameters": [{ "name": "visible", "type": "boolean" }]
    },
    "setEnabled": {
      "description": "Enables or disables interaction",
      "parameters": [{ "name": "enabled", "type": "boolean" }]
    },
    "setBackgroundColor": {
      "description": "Sets the background color",
      "parameters": [{ "name": "color", "type": "string" }]
    },
    "setTextColor": {
      "description": "Sets the text color",
      "parameters": [{ "name": "color", "type": "string" }]
    },
    "setFontSize": {
      "description": "Sets font size in pixels",
      "parameters": [{ "name": "size", "type": "integer" }]
    },
    "setBorder": {
      "description": "Sets border style (CSS)",
      "parameters": [{ "name": "style", "type": "string" }]
    }
  },
  "events": {
    "onSelect": { "description": "Fired when a user selects a row" },
    "onResultChanged": { "description": "Fired after the table data is rendered" },
    "onAfterDataEntryProcess": { "description": "Fired after data entry or external update is finished" }
  },
  "supportsMobile": true,
  "supportsExport": true,
  "supportsBookmark": true,
  "supportsViewportLoading": true
}
